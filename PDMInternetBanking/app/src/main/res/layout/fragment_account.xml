<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_fragment_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_account"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/cv_marginBottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_card_balance">

            <LinearLayout
                android:id="@+id/linear_layout_card_account"
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_card_header"
                android:orientation="horizontal"
                android:background="@color/colorAccent">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="15"
                    android:id="@+id/account_photo"
                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                    app:srcCompat="@drawable/ic_account_balance_wallet_24px"/>

                <TextView
                    android:id="@+id/account_balance_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="85"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:paddingTop="@dimen/nav_header_vertical_spacing_small"/>
            </LinearLayout>

            <TextView
                android:id="@+id/text_view_account_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_layout_card_account"
                android:layout_centerHorizontal="true"
                android:paddingTop="@dimen/linearLayout_contentHome_padding"
                android:textSize="@dimen/tv_big_textSize"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>